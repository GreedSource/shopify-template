<section class="inner-hero-section">
    {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url }}" alt="{{ section.settings.image_alt }}" class="inner-hero-image"/>
    {% else %}
        {% capture current %}{% cycle 1,2 %}{% endcapture %}
        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg'}}
    {% endif %}
    <div class="container py-5 row">
        <div class="col-lg-6 col-md-6 mx-auto">
            <h1 class="display-4">{{ section.settings.title }}</h1>
            <p class="lead">{{section.settings.description}}</p>
            <a href="{{section.settings.button_link}}" class="btn btn-secondary">{{section.settings.button_label}}</a>
        </div>
    </div>
</section>

{% schema %}

{
    "name": "hero",
    "class": "hero-section",
    "settings": [
		{
			"type": "image_picker",
			"id": "image",
			"label": "Heading Image"
		},
        {
            "type": "text",
            "id": "title",
            "default": "Example Heading",
            "label": "Heading Title"
        },
		{
			"type": "richtext",
			"id": "description",
			"default": "<p>This is a example description</p>",
			"label": "Heading Description"
		},
		{
			"type": "url",
			"id": "button_link",
			"label": "Link"
		},
		{
			"type": "text",
			"id": "button_label",
			"label": "Button Heading Label",
			"default": "Shop Now"
		}
    ],
	"presets": [
		{
			"category": "Hero",
			"name": "Hero"
		}
	]
}

{% endschema %}